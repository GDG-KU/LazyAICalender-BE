generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id
  name  String
  email String @unique

  birthDate DateTime?
  createdAt DateTime  @default(now())

  categories    Category[]
  schedules     Schedule[]
  scheduleRules ScheduleRule[]
}

model Schedule {
  id       String @id @default(uuid())
  name     String
  category String

  startDatetime DateTime
  endDatetime   DateTime?

  isAllDay    Boolean @default(false)
  isToDo      Boolean @default(false)
  isCompleted Boolean @default(false)
  isImportant Boolean @default(false) //중요일정(알람)

  ruleId String?
  rule   ScheduleRule? @relation(fields: [ruleId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([category])
  @@index([isCompleted])
}

model Category {
  id   String @id @default(uuid())
  name String

  userId String? // 생성 유저 ID (optional, NULL인 경우 공통 카테고리)
  user   User?   @relation(fields: [userId], references: [id])

  @@unique([userId, name]) // 유저별 카테고리 이름 중복 방지
  @@index([userId, name])
}

model ScheduleRule {
  id   String @id @default(uuid())
  name String

  periodEndDate String?
  category      String

  startDatetime DateTime
  endDatetime   DateTime?

  isAllDay    Boolean @default(false)
  isToDo      Boolean @default(false)
  isImportant Boolean @default(false) //중요일정(알람)

  dayOfWeek   Int[] //0(SUN)~6(SAT)   Weekly인 경우 무슨요일인지 지정
  weekOfMonth Int[] //1~5주차         Monthly의 경우 무슨주차인지 지정
  monthOfYear Int[] //1~12월           Yearly의 경우 월 지정
  term         Int   @default(1) //반복 간격 (매주, 매달, 매년 등)

  ruleType  RuleType
  schedules Schedule[]

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@unique([name, userId]) // 유저별 스케줄 룰 이름 중복 방지
}

enum RuleType {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}
